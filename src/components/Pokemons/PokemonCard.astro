---
interface Props{
    url : string;
    name : string;
    isBig? : boolean;
}

const {url, name, isBig = false} = Astro.props;
const id = url.split('/').at(-2)
const ImagenSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`
---
<!-- href=`/pokemons/${name}` -->
<a
    href=`/pokemons/${name}`
    class:list={
        [`rounded flex flex-col justify-center items-center p-2`,{
            border: !isBig
        }]
    }
    >
    <!--Para agregar la transiciÃ³n de imagen debe tener un identificador unico -->
    <img 
    
    transition:name={`${name}--image`}

    src={ImagenSrc} alt={name} 
        class:list={
            [{
                'w-22 h-22' : !isBig,
                'w-66 h-66' : isBig
            }]
        }
    />

    <span class="capitalize"
    class:list={
        [{
            'text-3xl mb-5 text-blue-500' : isBig
        }]
    }>#{id} {name}</span>

</a>
